<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RestaurantActivity"
    android:background="#f1f1f1"
    android:id="@+id/restaurantLanguageContainer">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView3"
        android:layout_marginTop="180dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/restaurantMenuContainer">

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/restaurantHeadContainer"
            android:layout_gravity="bottom" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/restaurantPercentContainer"
            android:layout_gravity="bottom"
            android:layout_weight="1" />

    </LinearLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="#00ffffff"
        android:clickable="false">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/garbageButton"
            android:src="@drawable/garbage"
            android:layout_gravity="center"
            android:clickable="true"
            android:onClick="onClick" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:id="@+id/garbageNum"
                android:gravity="center_horizontal|bottom"
                android:layout_gravity="center_horizontal"
                android:textColor="#000000"
                android:textSize="15sp"
                android:layout_marginBottom="5dp" />
        </FrameLayout>

    </FrameLayout>
</FrameLayout>
