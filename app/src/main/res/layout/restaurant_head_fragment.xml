<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/restaurantHeadFrameLayout">
<LinearLayout
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="244dp"
    android:clickable="true"
    android:id="@+id/restaurantHeadFragment"
    android:background="@drawable/main_background">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_gravity="center"
        android:layout_weight="0.24"
        android:paddingLeft="15dp"
        android:layout_marginTop="25dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:id="@+id/restaurantLayout1">
        <ImageView
            android:layout_width="170dp"
            android:layout_height="135dp"
            android:id="@+id/restaurantHeadAvatar"
            android:layout_marginRight="9dp"
            android:src="@drawable/tanuki_avatar" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="135dp"
            android:paddingRight="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Тануки"
                android:id="@+id/restaurantName"
                android:textSize="18sp"
                android:layout_marginTop="2dp"
                android:textColor="#000000"
                android:visibility="visible" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Китайская кухня"
                android:id="@+id/restaurantProfile"
                android:textSize="10sp"
                android:textColor="#a1a1a1" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="23dp"
                    android:id="@+id/restaurantStars"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="1dp"
                    android:layout_marginRight="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.5"
                    android:id="@+id/restaurantLevel"
                    android:layout_gravity="center_vertical"
                    android:inputType="number"
                    android:textColor="#000000"
                    android:textSize="21sp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1000 $"
                    android:id="@+id/costMeal"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginRight="2dp"
                    android:textColor="#000000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="мин. сумма заказа"
                    android:id="@+id/costMealText"
                    android:textSize="10sp"
                    android:textColor="#a1a1a1" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Бесплатно"
                    android:id="@+id/costDeliver"
                    android:layout_marginRight="2dp"
                    android:textSize="14sp"
                    android:textColor="#000000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="стоимость доставки"
                    android:id="@+id/costDeliverText"
                    android:textSize="10sp"
                    android:textColor="#a1a1a1" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="60 мин"
                    android:id="@+id/timeDeliver"
                    android:layout_marginRight="2dp"
                    android:textSize="14sp"
                    android:textColor="#000000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="среднее время доставки"
                    android:id="@+id/timeDeliverText"
                    android:textSize="10sp"
                    android:textColor="#a1a1a1" />
            </LinearLayout>
        </LinearLayout>
        </LinearLayout>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id="@+id/miniMenuRestaurantButton"
        android:clickable="true"
        android:paddingBottom="20dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center|bottom">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:layout_gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="МЕНЮ"
                android:id="@+id/textView7"
                android:layout_gravity="center"
                android:textSize="19sp"
                android:textColor="#000000" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView2"
                android:layout_gravity="center"
                android:src="@drawable/arrow_down"
                android:layout_weight="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center" />

        </LinearLayout>

    </FrameLayout>

</LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="220dp" >
    </LinearLayout>
</FrameLayout>