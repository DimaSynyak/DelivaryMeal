<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1f1f1"
    android:id="@+id/menu">

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <ScrollView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/scrollView" android:fillViewport="false"
                android:layout_weight="12">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/base_frame"
                    >
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" android:id="@+id/baseLayout">


                        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:clickable="true"
                            android:id="@+id/formDataClick"
                            android:onClick="onClick">

                            <FrameLayout
                                android:focusable="false"
                                android:focusableInTouchMode="false"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content" android:id="@+id/deliverLayout" android:clickable="false"
                                android:layout_marginBottom="9dp"
                                android:layout_marginTop="18dp">
                                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceLarge" android:text="@string/your_data"
                                    android:id="@+id/deliverText" android:layout_gravity="left|center_vertical" android:clickable="false"
                                    android:layout_marginLeft="30dp" android:fontFamily="@string/geometric_706_black"
                                    android:textSize="18sp"
                                    android:textColor="#000000" />
                                <ImageView android:layout_width="20dp" android:layout_height="20dp" android:id="@+id/arrowImg1"
                                    android:src="@drawable/arrow" android:layout_gravity="center_vertical|right"
                                    android:layout_marginRight="35dp"/>
                            </FrameLayout>

                        </LinearLayout>

                        <FrameLayout android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:id="@+id/formDataContainer"
                            android:layout_gravity="bottom"/>

                        <ImageView android:layout_width="fill_parent" android:layout_height="wrap_content"
                            android:id="@+id/lineView1" android:background="@drawable/line"/>

                        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:clickable="true"
                            android:id="@+id/orderClick"
                            android:onClick="onClick">

                            <FrameLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content" android:id="@+id/meals" android:clickable="false"
                                android:layout_marginBottom="9dp"
                                android:layout_marginTop="18dp"
                                android:focusable="false"
                                android:focusableInTouchMode="false">
                                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceLarge" android:text="@string/your_order"
                                    android:id="@+id/mealText" android:layout_gravity="left|center_vertical" android:clickable="false"
                                    android:layout_marginLeft="30dp" android:fontFamily="@string/geometric_706_black"
                                    android:textSize="18sp"
                                    android:textColor="#000000" />
                                <ImageView android:layout_width="20dp" android:layout_height="20dp" android:id="@+id/arrowImg4"
                                    android:src="@drawable/arrow" android:layout_gravity="center_vertical|right"
                                    android:layout_marginRight="35dp"/>
                            </FrameLayout>

                        </LinearLayout>


                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:id="@+id/orderDataContainer"
                            android:layout_gravity="bottom"/>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="visible"
                            android:id="@+id/total">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#000000"
                                android:textSize="18sp"
                                android:text="@string/total"
                                android:id="@+id/total_text1"
                                android:paddingTop="10dp"
                                android:paddingBottom="10dp"
                                android:paddingLeft="10dp" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=":"
                                android:textColor="#000000"
                                android:textSize="18sp"
                                android:paddingTop="10dp"
                                android:paddingBottom="10dp" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#000000"
                                android:textSize="16sp"
                                android:text="1250"
                                android:id="@+id/total_text2"
                                android:padding="10dp" />

                        </LinearLayout>
                        <ImageView android:layout_width="fill_parent" android:layout_height="wrap_content"
                            android:id="@+id/lineView2" android:background="@drawable/line"/>

                        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:clickable="true"
                            android:id="@+id/linearLayout2"
                            android:onClick="onClick" >

                            <FrameLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/frameLayout"
                                android:clickable="false"
                                android:layout_marginBottom="9dp"
                                android:layout_marginTop="18dp"
                                android:focusable="false"
                                android:focusableInTouchMode="false" >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceLarge"
                                    android:text="@string/personal_cabinet"
                                    android:id="@+id/textView23"
                                    android:layout_gravity="left|center_vertical"
                                    android:clickable="false"
                                    android:layout_marginLeft="30dp"
                                    android:fontFamily="@string/geometric_706_black"
                                    android:textSize="18sp"
                                    android:textColor="#000000" />

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:id="@+id/imageView5"
                                    android:src="@drawable/arrow"
                                    android:layout_gravity="center_vertical|right"
                                    android:layout_marginRight="35dp" />
                            </FrameLayout>
                        </LinearLayout>

                    </LinearLayout>

                </FrameLayout>
            </ScrollView>

            <fragment tools:layout="@layout/menu_signature"
                android:name="com.dmitriy.sinyak.delivarymeal.app.activity.main.menu.fragments.SignatureFragment"
                android:layout_width="fill_parent" android:layout_height="wrap_content"
                android:id="@+id/fragment" android:layout_gravity="bottom"/>

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/filterFrame"
                android:paddingTop="5dp"
                android:paddingBottom="5dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/lineVIew6"
                        android:layout_gravity="bottom"
                        android:background="@drawable/line" />

                    <HorizontalScrollView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/horizontalScrollView"
                        android:fillViewport="true">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/filterLayout" >

                        </LinearLayout>
                    </HorizontalScrollView>
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>
