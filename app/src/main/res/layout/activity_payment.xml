<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".RestaurantActivity"
    android:background="#f1f1f1"
    android:id="@+id/paymentLanguageContainer">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="100dp"
            android:id="@+id/imageView6"
            android:layout_weight="1"
            android:src="@drawable/seb"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="10dp"
            android:background="#ffffff"
            android:onClick="onClick"
            android:clickable="true"
            android:layout_gravity="center"
            android:padding="15dp" />

        <ImageView
            android:layout_width="60dp"
            android:layout_height="100dp"
            android:id="@+id/imageView7"
            android:layout_weight="1"
            android:src="@drawable/swedbank"
            android:background="#ffffff"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="5dp"
            android:onClick="onClick"
            android:clickable="true"
            android:layout_gravity="center"
            android:padding="25dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="100dp"
            android:id="@+id/imageView8"
            android:layout_weight="1"
            android:src="@drawable/lhv"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="10dp"
            android:background="#ffffff"
            android:onClick="onClick"
            android:clickable="true"
            android:layout_gravity="center"
            android:padding="15dp" />

        <ImageView
            android:layout_width="60dp"
            android:layout_height="100dp"
            android:id="@+id/imageView9"
            android:layout_weight="1"
            android:src="@drawable/nordea"
            android:background="#ffffff"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="5dp"
            android:onClick="onClick"
            android:clickable="true"
            android:layout_gravity="center"
            android:padding="15dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="100dp"
            android:id="@+id/imageView10"
            android:layout_weight="1"
            android:src="@drawable/danske"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="10dp"
            android:background="#ffffff"
            android:onClick="onClick"
            android:clickable="true"
            android:layout_gravity="center"
            android:padding="25dp" />

        <ImageView
            android:layout_width="60dp"
            android:layout_height="100dp"
            android:id="@+id/imageView11"
            android:layout_weight="1"
            android:src="@drawable/krediidipank"
            android:background="#ffffff"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="5dp"
            android:onClick="onClick"
            android:clickable="true"
            android:layout_gravity="center"
            android:padding="15dp" />
    </LinearLayout>
</LinearLayout>

</FrameLayout>
