<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:id="@+id/baseLayout">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:id="@+id/searchText" android:layout_weight="1" android:background="#d4d4d4"
            android:layout_marginTop="15dp" android:layout_marginLeft="15dp" android:hint="@string/search"
            android:paddingLeft="25dp" android:layout_marginBottom="15dp"/>
    <ImageButton
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/loupe_btn" android:src="@drawable/loupe" android:background="#d4d4d4"
            android:layout_marginTop="15dp" android:layout_marginRight="15dp"/>
</LinearLayout>